@model TodoList.Models.TodoItem

@{
    ViewData["Title"] = "Delete";
}

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Todo Item</h4>
    <hr />
    <dl class="row">

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedOn)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreatedOn, "{0:d}")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Objective)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Objective)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CompleteOn)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CompleteOn)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Priority)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Priority)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        <input type="submit" value="Delete" class="btn btn-danger" />
        @Html.ActionLink("Back to List", "Items", "TodoItems")
    }
</div>
