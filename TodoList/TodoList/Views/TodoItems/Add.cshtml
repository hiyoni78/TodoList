                <input asp-for="Objective" class="form-control" />
                <span asp-validation-for="Objective" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CompleteOn" class="control-label">Complete by</label>
                <input asp-for="CompleteOn" class="form-control" />
                <span asp-validation-for="CompleteOn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </div>
    </div>
}
