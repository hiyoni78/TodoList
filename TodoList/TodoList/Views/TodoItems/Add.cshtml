@model TodoList.Models.TodoItem

@{
    ViewData["Title"] = "Add";
}

<h1>Add</h1>

<h4>TodoItem</h4>
<hr />

@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="Id" class="control-label">Created on</label>
                <input asp-for="Id" type="date" class="form-control" />
